<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ButtonTab">
        <item name="android:textSize">@dimen/text_regular</item>
        <item name="android:padding">@dimen/margin_small</item>
        <item name="android:layout_margin">@dimen/margin_extra_small</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">@drawable/ripple_grey</item>
    </style>

    <style name="Title">
        <item name="android:textSize">@dimen/text_regular_3x</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TalkTitle" parent="Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PodcastTitle" parent="Title">
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="TalkDuration">
        <item name="android:textSize">@dimen/text_regular_2x</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SearchText">
        <item name="android:textSize">@dimen/text_regular_2x</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SearchRecommendedText">
        <item name="android:textSize">@dimen/text_regular_2x</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

</resources>
